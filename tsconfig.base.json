{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@discover/api/nest": ["libs/api/nest/src/index.ts"],
      "@discover/models/veritas": ["libs/models/veritas/src/index.ts"],
      "@discover/ui/andromeda": ["libs/ui/andromeda/src/index.ts"],
      "@discover/ui/next": ["libs/ui/next/src/index.ts"],
      "@discover/ui/next/config": ["libs/ui/next/src/config/index.ts"],
      "@discover/ui/next/auth": ["libs/ui/next/src/auth/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
